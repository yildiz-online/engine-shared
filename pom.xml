<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Yildiz Engine Shared</name>
  <description>Shared data between the yildiz server and client engines.</description>

  <groupId>be.yildiz-games</groupId>
  <artifactId>engine-shared</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <packaging>jar</packaging>
  <inceptionYear>2011</inceptionYear>
  <scm>
    <connection>scm:git:https://bitbucket.org/yildiz-engine-team/engine-shared</connection>
    <developerConnection>scm:git:https://bitbucket.org/yildiz-engine-team/engine-shared</developerConnection>
    <url>https://bitbucket.org/yildiz-engine-team/engine-shared</url>
  </scm>
  <parent>
    <groupId>be.yildiz-games</groupId>
    <artifactId>parent</artifactId>
    <version>1.0.8-SNAPSHOT</version>
  </parent>

  <properties>
    <version.bom-junit>1.0.4-SNAPSHOT</version.bom-junit>
    <version.module-network>1.0.2-SNAPSHOT</version.module-network>
    <version.module-physics>1.0.3-SNAPSHOT</version.module-physics>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>be.yildiz-games</groupId>
        <artifactId>bom-junit</artifactId>
        <version>${version.bom-junit}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>be.yildiz-games</groupId>
      <artifactId>module-network</artifactId>
      <version>${version.module-network}</version>
    </dependency>
    <dependency>
      <groupId>be.yildiz-games</groupId>
      <artifactId>module-physics</artifactId>
      <version>${version.module-physics}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
    </dependency>
  </dependencies>

</project>
